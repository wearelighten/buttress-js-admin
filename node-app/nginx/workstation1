upstream buttress_admin_upstream {
    ip_hash;
    server localhost:7011;
}

server {
    listen 80;
    server_name dev.admin.buttressjs.com;

    access_log /home/chris/Work/Workspaces/WebStorm/buttress-js-admin/polymer-app/log/access.log combined;
    error_log  /home/chris/Work/Workspaces/WebStorm/buttress-js-admin/polymer-app/log/error.log error;

    root /home/chris/Work/Workspaces/WebStorm/buttress-js-admin/polymer-app/app/serve;
    index index.html;

    location ~ ^/(api/v1|authenticated|auth/google|auth/google/callback|logout) {
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_pass http://buttress_admin_upstream;
    }

    location /bower_components/ {
        expires 30s;
        add_header Cache-Control private;
    }

    location /images/ {
        expires 30s;
        add_header Cache-Control private;
    }

    location /src/ {
        try_files $uri =404;
        expires -1;
    }

    location / {
        try_files /index.html =404;
    }

}
