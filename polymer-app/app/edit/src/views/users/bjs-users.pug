dom-module#bjs-users
  template
    style(is="custom-style" include="iron-flex iron-positioning iron-flex-alignment")
    style(include="shared-styles").
      :host {
        display: block;
        padding: 10px;
      }

    iron-pages(
      selected='[[__loadMode]]',
      attr-for-selected='name',
      role='loading'
    )
      .layout.horizontal.center.center-justified.auth-container(name="loading", style="height: 90vh;")
        paper-spinner(active, alt="Loading Users data...", style="width: 64px; height: 64px;")

      div(name="loaded")
        iron-pages(
          selected='[[__pageMode]]',
          attr-for-selected='name',
          role='loaded'
        )
          div(name="list")
            bjs-user-table-listing(
              db="[[db]]",
              base-query="[[__userQuery]]"
            )

          div(name="detail")
            bjs-user-detail(
              db="{{db}}",
              item="[[__selectedItem]]",
              route="{{route}}",
              route-data="{{routeData}}"
            )

  script(src="bjs-users.js")
