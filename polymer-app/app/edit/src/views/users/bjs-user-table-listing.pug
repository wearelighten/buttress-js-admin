dom-module#bjs-user-table-listing
  template
    style(is="custom-style" include="iron-flex iron-positioning iron-flex-alignment")
    style(include="shared-styles").
      :host {
        display: block;
      }
      
    bjs-app-db-query(
      log-label="[[name]]-user",
      db="[[db]]",
      doc="[[db.user]]",
      query="[[__userQuery]]",
      num-results="{{__userTotal}}",
      num-pages="{{__userNumPages}}",
      page="[[__userPage]]",
      find-all="{{__user}}",
      sort-path="timestamp",
      sort-order="DESC",
      sort-type="date"
    )

    bjs-user-table(
      db="[[db]]",
      data="[[__user]]",
      current-page="{{__userPage}}",
      total-pages="[[__userNumPages]]",
      total-results="[[__userTotal]]",
      filters="{{__filters}}",
      filter-spec="[[__filterSpec]]"
    )

  script(src="bjs-user-table-listing.js")
