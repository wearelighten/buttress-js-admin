dom-module#bjs-org-card
  template
    style(is="custom-style" include="iron-flex iron-positioning iron-flex-alignment")
    style(include="shared-styles").
      :host {

      }

    .card
      .layout.horizontal
        .circle {{index}}
        .layout.vertical
          h2 {{item.name}}
          a(href="{{item.website}}")
            | {{item.website}}
        .flex
        .layout.vertical
          .layout.horizontal
            .flex
            paper-icon-button(icon="delete", on-click="__rmItem")
          paper-button(on-click="__viewItem") Details

  script.
    Polymer({
      is: 'bjs-org-card',
      properties: {
        index: {
          type: Number
        },
        item: {
          type: Object
        }
      },
      __rmItem: function() {
        this.fire('rm-item', this.item);
      },
      __viewItem: function() {
        this.fire('view-item', this.item);
      }
    });
