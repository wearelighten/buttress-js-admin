link(rel="import", href="../bower_components/polymer/polymer.html")
link(rel="import", href="../bower_components/paper-styles/shadow.html")

//- shared styles for all views
dom-module(id="shared-styles")
  template
    style.
      .card {
        @apply(--shadow-elevation-2dp);

        margin: 24px;
        padding: 16px;
        background-color: #fff;
      }

      .circle {
        display: inline-block;

        width: 64px;
        height: 64px;

        text-align: center;

        color: white;
        border-radius: 50%;
        background: var(--accent-color);
        margin-right: 20px;

        font-size: 30px;
        line-height: 64px;
      }

      h1 {
        margin: 0px 0;

        color: #212121;

        font-size: 22px;
      }

      paper-fab {
        --paper-fab: {
          height: 64px;
          width: 64px;
        }
        --paper-fab-iron-icon: {
          width: 32px;
          height: 32px;
        }
      }